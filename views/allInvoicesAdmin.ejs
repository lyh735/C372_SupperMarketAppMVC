<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/style.css">
  <title>Supermarket App - All Purchase History</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/inventory">Inventory</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/feedback">View Feedback</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container py-4">
    <p class="text-muted mb-2">
      Welcome, <strong><%= user.username %></strong> (<%= user.role %>)
    </p>

    <div class="text-center mb-4">
      <h2 class="mb-1">All User Purchase History</h2>
      <p class="text-muted">View all invoices from all customers</p>
    </div>

    <% if (!invoices || invoices.length === 0) { %>
      <div class="alert alert-info text-center">
        No purchase history found.
      </div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-dark">
            <tr>
              <th>Invoice ID</th>
              <th>Customer Username</th>
              <th>User ID</th>
              <th>Date</th>
              <th>Total Amount</th>
              <th>Payment Method</th>
              <th>Payment Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% invoices.forEach(invoice => { %>
              <tr>
                <td><strong><%= invoice.invoiceId %></strong></td>
                <td><%= invoice.username %></td>
                <td><%= invoice.userId %></td>
                <td>
                  <small><%= new Date(invoice.createdAt).toLocaleDateString() %></small><br>
                  <small class="text-muted"><%= new Date(invoice.createdAt).toLocaleTimeString() %></small>
                </td>
                <td>
                  <span class="badge bg-success">
                    $<%= parseFloat(invoice.totalAmount).toFixed(2) %>
                  </span>
                </td>
                <td><%= invoice.paymentMethod %></td>
                <td><%= invoice.paymentStatus %></td>
                <td>
                  <a href="/invoice/<%= invoice.invoiceId %>" class="btn btn-sm btn-primary">View Details</a>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } %>

    <a href="/inventory" class="btn btn-secondary mt-3">Back to Inventory</a>
  </div>
  <%- include('partials/footer') %>
</body>
</html>
