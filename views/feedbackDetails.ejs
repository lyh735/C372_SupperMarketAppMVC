<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/style.css">
  <title>Supermarket App - Product Feedback</title>
</head>
<body>
  <!-- Navbar (replaced with simple layout) -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/shopping">Back to Shopping</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/feedback">Feedback List</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container py-4">
    <% if (user) { %>
      <p class="text-muted mb-3">Signed in as: <strong><%= user.username %></strong> (<%= user.role %>)</p>
    <% } %>

    <% if (!product) { %>
      <div class="alert alert-danger">Product not found.</div>
      <a href="/feedback" class="btn btn-secondary mt-3">Back to Feedback List</a>
    <% } else { %>

      <!-- Main layout: product card + feedback card -->
      <div class="row g-4">
        <!-- Product summary card -->
        <div class="col-lg-4">
          <div class="card shadow-sm h-100">
            <div class="card-header bg-light">
              <h5 class="mb-0">Product Details</h5>
            </div>
            <div class="card-body text-center">
              <div class="mb-3">
                <img src="/images/<%= product.image %>" 
                     class="img-fluid rounded product-detail-image" 
                     alt="<%= product.productName %>">
              </div>
              <h5 class="card-title mb-2"><%= product.productName %></h5>
              <p class="mb-1"><strong>Price:</strong> $<%= product.price.toFixed(2) %></p>
              <p class="mb-0"><strong>Available:</strong> <%= product.quantity %> in stock</p>
            </div>
          </div>
        </div>

        <!-- Feedback content card -->
        <div class="col-lg-8">
          <div class="card shadow-sm h-100">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
              <h5 class="mb-0">Feedback & Reviews</h5>
            </div>
            <div class="card-body">

              <% if (user.role === 'admin') { %>
                <!-- Admin view: all feedback -->
                <div class="mb-3">
                  <span class="badge bg-info text-dark">Admin View</span>
                  <p class="mt-2 mb-1">You can see all feedback for this product.</p>
                </div>

                <% if (allFeedback && allFeedback.length > 0) { %>
                  <% allFeedback.forEach(fb => { %>
                    <div class="card mb-3 border-0 border-start border-4 border-warning feedback-card">
                      <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-1">
                          <h6 class="mb-0">Rating: 
                            <span class="badge bg-warning text-dark"><%= fb.rating %>/5</span>
                          </h6>
                          <small class="text-muted">
                            <%= new Date(fb.createdAt).toLocaleDateString() %>
                            <% if (fb.updatedAt && new Date(fb.updatedAt).getTime() !== new Date(fb.createdAt).getTime()) { %>
                              · updated <%= new Date(fb.updatedAt).toLocaleDateString() %>
                            <% } %>
                          </small>
                        </div>
                        <p class="card-text mb-0"><%= fb.comment || 'No comment provided' %></p>
                      </div>
                    </div>
                  <% }); %>
                <% } else { %>
                  <p class="alert alert-warning mb-0">No feedback yet for this product.</p>
                <% } %>

              <% } else { %>
                <!-- Normal user view -->

                <!-- Your feedback card or CTA -->
                <% if (userFeedback) { %>
                  <div class="card mb-4 border-0 border-start border-4 border-success feedback-card">
                    <div class="card-body">
                      <div class="d-flex justify-content-between align-items-center">
                        <h6 class="mb-0">Your Feedback</h6>
                        <span class="badge bg-success">
                          <%= userFeedback.rating %>/5
                        </span>
                      </div>
                      <p class="card-text mt-2 mb-1">
                        <%= userFeedback.comment || 'No comment provided' %>
                      </p>
                      <small class="text-muted">
                        Submitted: <%= new Date(userFeedback.createdAt).toLocaleDateString() %>
                        <% if (userFeedback.updatedAt && new Date(userFeedback.updatedAt).getTime() !== new Date(userFeedback.createdAt).getTime()) { %>
                          · updated <%= new Date(userFeedback.updatedAt).toLocaleDateString() %>
                        <% } %>
                      </small>

                      <div class="mt-3 d-flex gap-2">
                        <a href="/feedback/edit/<%= userFeedback.id %>?productId=<%= product.id %>" 
                           class="btn btn-outline-warning btn-sm">
                          Edit
                        </a>
                        <form action="/feedback/delete/<%= userFeedback.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this feedback?');">
                          <input type="hidden" name="productId" value="<%= product.id %>">
                          <button type="submit" class="btn btn-outline-danger btn-sm">
                            Delete
                          </button>
                        </form>
                      </div>
                    </div>
                  </div>
                <% } else { %>
                  <div class="card mb-4 border-0 border-start border-4 border-primary feedback-card">
                    <div class="card-body d-flex justify-content-between align-items-center">
                      <div>
                        <h6 class="mb-1">You haven’t left feedback yet</h6>
                        <p class="mb-0 text-muted">Share your rating to help other shoppers.</p>
                      </div>
                      <a href="/feedback/product/<%= product.id %>/submit" class="btn btn-success btn-sm">
                        Leave Feedback
                      </a>
                    </div>
                  </div>
                <% } %>

                <!-- Other users' feedback -->
                <% if (allFeedback && allFeedback.length > 0) { %>
                  <h6 class="mb-3">Other Reviews</h6>
                  <% let otherFeedbackCount = 0; %>
                  <% allFeedback.forEach(fb => { %>
                    <% if (!userFeedback || fb.id !== userFeedback.id) { %>
                      <div class="card mb-2 border-0 border-start border-4 border-info feedback-card">
                        <div class="card-body">
                          <div class="d-flex justify-content-between align-items-center mb-1">
                            <span class="badge bg-info text-dark">
                              Rating: <%= fb.rating %>/5
                            </span>
                            <small class="text-muted">
                              <%= new Date(fb.createdAt).toLocaleDateString() %>
                            </small>
                          </div>
                          <p class="card-text mb-0"><%= fb.comment || 'No comment provided' %></p>
                        </div>
                      </div>
                      <% otherFeedbackCount++; %>
                    <% } %>
                  <% }); %>

                  <% if (otherFeedbackCount === 0) { %>
                    <p class="text-muted mb-0">No other reviews yet.</p>
                  <% } %>
                <% } else { %>
                  <p class="text-muted mb-0">No reviews yet. Be the first to share your experience.</p>
                <% } %>

              <% } %>
            </div>
          </div>
        </div>
      </div>

      <div class="mt-3">
        <a href="/feedback" class="btn btn-secondary">Back to Feedback List</a>
        <a href="/shopping" class="btn btn-outline-primary ms-2">Continue Shopping</a>
      </div>

    <% } %>
  </div>
</body>
</html>
