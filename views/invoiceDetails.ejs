<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Invoice #<%= invoice.invoiceId %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/shopping">Shop</a></li>
          <li class="nav-item"><a class="nav-link" href="/cart">View Cart</a></li>
          <li class="nav-item"><a class="nav-link" href="/invoices">History</a></li>
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <h2>Invoice #<%= invoice.invoiceId %></h2>
    <p><strong>Date:</strong> <%= invoice.createdAt %></p>
    <p><strong>Total Amount:</strong> $<%= Number(invoice.totalAmount).toFixed(2) %></p>

    <h4 class="mt-4">Items</h4>

    <% if (!items || items.length === 0) { %>
      <p>No items found in this invoice.</p>
    <% } else { %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Product</th>
            <th>Image</th>
            <th class="text-end">Quantity</th>
            <th class="text-end">Price</th>
            <th class="text-end">Line Total</th>
          </tr>
        </thead>
        <tbody>
          <% items.forEach(function(item) { %>
            <tr>
              <td><%= item.productName %></td>
              <td>
                <% if (item.image) { %>
                  <img src="/images/<%= item.image %>" class="img-thumbnail" style="width:80px;">
                <% } %>
              </td>
              <td class="text-end"><%= item.quantity %></td>
              <td class="text-end">$<%= Number(item.price).toFixed(2) %></td>
              <td class="text-end">$<%= Number(item.lineTotal).toFixed(2) %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>

    <a href="/shopping" class="btn btn-primary mt-3">Continue Shopping</a>
    <a href="/invoices" class="btn btn-secondary mt-3">View Purchase History</a>
  </div>
</body>
</html>
