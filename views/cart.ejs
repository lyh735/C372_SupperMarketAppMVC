<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Shopping Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <script>
    function validateQuantityChange(productId, maxStock, action) {
      if (action === 'manual') {
        const input = document.getElementById('qty-' + productId);
        const quantity = parseInt(input.value, 10);

        if (isNaN(quantity) || quantity < 1) {
          alert('Please enter a valid quantity (minimum 1)');
          input.focus();
          return false;
        }

        if (quantity > maxStock) {
          alert(`You can only have up to ${maxStock} units of this product`);
          input.value = maxStock;
          input.focus();
          return false;
        }
      }
      return true;
    }

    function validateIncrease(productId, currentQty, stock) {
      const newQty = currentQty + 1;
      if (newQty > stock) {
        alert(`Cannot exceed available stock. Only ${stock} units available.`);
        return false;
      }
      return true;
    }
  </script>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/shopping">Shop</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart">View Cart</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <h2>Shopping Cart</h2>

    <% if (!cart || cart.length === 0) { %>
      <p>Your cart is empty.</p>
      <a href="/shopping" class="btn btn-primary">Back to Shopping</a>
    <% } else { %>
      <table class="table table-bordered align-middle">
        <thead>
          <tr>
            <th>Product</th>
            <th>Image</th>
            <th>Price</th>
            <th style="width: 220px;">Quantity</th>
            <th>Subtotal</th>
            <th>Remove</th>
          </tr>
        </thead>
        <tbody>
          <% let total = 0; %>
          <% for (let i = 0; i < cart.length; i++) {
               const item = cart[i];
               const sub = item.price * item.quantity;
               const stock = item.stock || 0;  // âœ… default so JS never breaks
               total += sub;
          %>
            <tr>
              <td><%= item.productName %></td>
              <td>
                <img src="/images/<%= item.image %>" width="80" class="img-thumbnail">
              </td>
              <td>$<%= item.price.toFixed ? item.price.toFixed(2) : Number(item.price).toFixed(2) %></td>

              <!-- Quantity with - / + buttons -->
              <td>
                <div class="d-flex align-items-center gap-2 flex-wrap">
                  <!-- Decrease -->
                  <form action="/cart/decrease" method="POST">
                    <input type="hidden" name="productId" value="<%= item.productId %>">
                    <button type="submit" class="btn btn-outline-secondary btn-sm">-</button>
                  </form>

                  <span class="fw-semibold"><%= item.quantity %></span>

                  <!-- Increase with stock check -->
                  <form action="/cart/increase"
                        method="POST"
                        onsubmit="return validateIncrease(<%= item.productId %>, <%= item.quantity %>, <%= stock %>)">
                    <input type="hidden" name="productId" value="<%= item.productId %>">
                    <button type="submit"
                            class="btn btn-outline-secondary btn-sm"
                            <% if (item.quantity >= stock || stock === 0) { %>disabled<% } %>>
                      +
                    </button>
                  </form>
                </div>
                <small class="text-muted d-block mt-2">
                  Stock available:
                  <strong><%= stock %></strong> units
                </small>
              </td>

              <!-- Subtotal -->
              <td>$<%= sub.toFixed(2) %></td>

              <!-- Remove whole product -->
              <td>
                <form action="/cart/remove" method="POST">
                  <input type="hidden" name="productId" value="<%= item.productId %>">
                  <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                </form>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>

      <h4>Total: $<%= total.toFixed(2) %></h4>

      <div class="mt-4 d-flex gap-2">
        <a href="/shopping" class="btn btn-secondary">Back to Shopping</a>

        <!-- Clear cart with confirmation -->
        <form action="/cart/clear" method="POST"
              onsubmit="return confirm('Are you sure you want to clear your cart?');">
          <button type="submit" class="btn btn-outline-danger">Clear Cart</button>
        </form>

        <!-- Checkout -->
        <form action="/cart/checkout" method="POST">
          <button type="submit" class="btn btn-success">Checkout</button>
        </form>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <%- include('partials/footer') %>
</body>
</html>
