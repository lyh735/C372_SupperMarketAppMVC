<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App - Leave Feedback</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Supermarket App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/shopping">Back to Shopping</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>

  <div class="container">
    <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
    <br>
    <div class="text-center"><h2>Leave Feedback</h2></div>
    <p class="text-center">Select a product to view feedback or leave your own review</p>
    <br>
    
    <% if (products && products.length > 0) { %>
      <table class="table table-hover">
        <thead class="table-dark">
          <tr>
            <th>Product Name</th>
            <th>Image</th>
            <th>Price</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(product => { %>
            <tr>
              <td><%= product.productName %></td>
              <td><img src="/images/<%= product.image %>" width="50" class="img-thumbnail"></td>
              <td>$<%= product.price.toFixed(2) %></td>
              <td>
                <a href="/feedback/product/<%= product.id %>" class="btn btn-primary btn-sm">View Feedback</a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <div class="alert alert-info">No products available at this time.</div>
    <% } %>

    <a href="/shopping" class="btn btn-secondary mt-3">Back to Shopping</a>
  </div>
</body>
</html>
