<!DOCTYPE html>
<html>
<head>
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/navbar') %>
    <main class="container my-5">
        <h2>Students and Fines</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Student Name</th>
                    <th>Fine Type</th>
                    <th>Fine Description</th>
                    <th>Amount</th>
                    <th>Paid</th>
                </tr>
            </thead>
            <tbody>
                <% fines.forEach(fine => { %>
                    <tr>
                        <td><%= fine.userName %></td>
                        <td><%= fine.typeName || '-' %></td>
                        <td><%= fine.description %></td>
                        <td>$<%= Number(fine.amount).toFixed(2) %></td>
                        <td><%= fine.paid ? 'Yes' : 'No' %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/admin/fine-user" class="btn btn-primary">Fine a Student</a>
        <%- include('partials/footer') %>
    </main>
</body>
</html>