<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App - Product Feedback</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Supermarket App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/feedback">Back to Feedback List</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>

  <div class="container">
    <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
    <br>
    
    <% if (product) { %>
      <div class="card mb-4">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="/images/<%= product.image %>" class="img-fluid rounded-start" alt="<%= product.productName %>">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= product.productName %></h5>
              <p class="card-text"><strong>Price:</strong> $<%= product.price.toFixed(2) %></p>
              <p class="card-text"><strong>Available Quantity:</strong> <%= product.quantity %></p>
            </div>
          </div>
        </div>
      </div>

      <!-- Feedback Section -->
      <hr>
      <h3>Feedback & Reviews</h3>

      <% if (user.role === 'admin') { %>
        <!-- Admin: View all feedback -->
        <div class="alert alert-info">
          <strong>All Feedback for this Product:</strong>
        </div>
        <% if (allFeedback && allFeedback.length > 0) { %>
          <% allFeedback.forEach(fb => { %>
            <div class="card mb-3">
              <div class="card-body">
                <h5 class="card-title">Rating: <span class="badge bg-warning"><%= fb.rating %>/5</span></h5>
                <p class="card-text"><%= fb.comment || 'No comment provided' %></p>
                <small class="text-muted">Submitted: <%= new Date(fb.createdAt).toLocaleDateString() %></small>
                <% if (fb.updatedAt && new Date(fb.updatedAt).getTime() !== new Date(fb.createdAt).getTime()) { %>
                  <small class="text-muted"> | Updated: <%= new Date(fb.updatedAt).toLocaleDateString() %></small>
                <% } %>
              </div>
            </div>
          <% }); %>
        <% } else { %>
          <p class="alert alert-warning">No feedback yet for this product.</p>
        <% } %>

      <% } else { %>
        <!-- User: View, add, edit, delete their feedback -->
        <% if (userFeedback) { %>
          <div class="alert alert-success">
            <strong>Your Feedback:</strong>
          </div>
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title">Your Rating: <span class="badge bg-success"><%= userFeedback.rating %>/5</span></h5>
              <p class="card-text"><%= userFeedback.comment || 'No comment provided' %></p>
              <small class="text-muted">Submitted: <%= new Date(userFeedback.createdAt).toLocaleDateString() %></small>
              <% if (userFeedback.updatedAt && new Date(userFeedback.updatedAt).getTime() !== new Date(userFeedback.createdAt).getTime()) { %>
                <small class="text-muted"> | Updated: <%= new Date(userFeedback.updatedAt).toLocaleDateString() %></small>
              <% } %>
              <br><br>
              <a href="/feedback/edit/<%= userFeedback.id %>?productId=<%= product.id %>" class="btn btn-warning btn-sm">Edit Feedback</a>
              <form action="/feedback/delete/<%= userFeedback.id %>" method="POST" style="display:inline;">
                <input type="hidden" name="productId" value="<%= product.id %>">
                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this feedback?');">Delete Feedback</button>
              </form>
            </div>
          </div>
        <% } else { %>
          <div class="alert alert-info">
            <p>You haven't left feedback for this product yet.</p>
          </div>
          <a href="/feedback/product/<%= product.id %>/submit" class="btn btn-success mb-3">Leave Feedback</a>
        <% } %>

        <!-- Show other users' feedback -->
        <% if (allFeedback && allFeedback.length > 0) { %>
          <hr>
          <h5>Other Reviews:</h5>
          <% let otherFeedbackCount = 0; %>
          <% allFeedback.forEach(fb => { %>
            <% if (!userFeedback || fb.id !== userFeedback.id) { %>
              <div class="card mb-2">
                <div class="card-body">
                  <h6 class="card-title">Rating: <span class="badge bg-info"><%= fb.rating %>/5</span></h6>
                  <p class="card-text"><%= fb.comment || 'No comment provided' %></p>
                  <small class="text-muted">Posted: <%= new Date(fb.createdAt).toLocaleDateString() %></small>
                </div>
              </div>
              <% otherFeedbackCount++; %>
            <% } %>
          <% }); %>
          <% if (otherFeedbackCount === 0) { %>
            <p class="text-muted">No other reviews yet.</p>
          <% } %>
        <% } %>
      <% } %>

    <% } else { %>
      <div class="alert alert-danger">Product not found.</div>
    <% } %>

    <a href="/feedback" class="btn btn-secondary mt-3">Back to Feedback List</a>
  </div>
</body>
</html>
