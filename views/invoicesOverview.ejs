<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Invoices</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/shopping">Shop</a></li>
          <li class="nav-item"><a class="nav-link" href="/cart">View Cart</a></li>
          <li class="nav-item"><a class="nav-link active" href="/invoices">History</a></li>
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <h2>Purchase History</h2>

    <% if (!invoices || invoices.length === 0) { %>
      <p>You have no past purchases yet.</p>
      <a href="/shopping" class="btn btn-primary">Start Shopping</a>
    <% } else { %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Invoice #</th>
            <th>Date</th>
            <th class="text-end">Total Amount</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% invoices.forEach(function(inv) { %>
            <tr>
              <td><%= inv.invoiceId %></td>
              <td><%= inv.createdAt %></td>
              <td class="text-end">$<%= Number(inv.totalAmount).toFixed(2) %></td>
              <td class="text-end">
                <a class="btn btn-sm btn-outline-primary" href="/invoice/<%= inv.invoiceId %>">
                  View Details
                </a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>
  </div>
</body>
</html>
