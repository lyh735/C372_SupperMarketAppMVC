<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/style.css">
  <title>Supermarket App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Supermarket App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/addProduct">Add Product</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
    <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
    <br>
    <div class="text-center"><h2>Products from Supermarket App Database</h2></div>
    <br>

    <% 
      // Group products by category for admin view
      const grouped = {};
      (products || []).forEach(p => {
        const cat = p.category && p.category.trim() ? p.category : 'Uncategorized';
        if (!grouped[cat]) grouped[cat] = [];
        grouped[cat].push(p);
      });
      const cats = Object.keys(grouped).sort();
    %>

    <% if (!products || products.length === 0) { %>
      <div class="alert alert-info text-center">No products found.</div>
    <% } else { %>
      <% cats.forEach(cat => { %>
        <section class="mb-4">
          <h4 class="mb-2"><span class="badge bg-primary"><%= cat %></span></h4>
          <table class="table table-hover small text-center">
            <thead>
              <tr>
                <th width="200">Product Name</th>
                <th width="150">Product Image</th>
                <th width="80">Quantity</th>
                <th width="80">Price</th>
                <th width="80">Edit</th>
                <th width="80">Delete</th>
              </tr>
            </thead>
            <tbody>
              <% grouped[cat].forEach(prod => { %>
                <tr <% if (prod.quantity < 10) { %>class="table-warning"<% } %>>
                  <td><a href="/product/<%= prod.id %>"><%= prod.productName %></a></td>
                  <td><img src="images/<%= prod.image %>" style="max-width:120px; height:auto;"></td>
                  <td>
                    <% if (prod.quantity < 10) { %>
                      <span class="badge bg-warning text-dark"><%= prod.quantity %></span>
                      <small class="d-block text-warning">⚠️ Low Stock</small>
                    <% } else { %>
                      <span class="badge bg-success"><%= prod.quantity %></span>
                    <% } %>
                  </td>
                  <td>$<%= prod.price.toFixed(2) %></td>
                  <td><a href="/updateProduct/<%= prod.id %>">Edit</a></td>
                  <td><a href="/deleteProduct/<%= prod.id %>" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </section>
      <% }); %>
    <% } %>
  </div>
</body>
</html>
