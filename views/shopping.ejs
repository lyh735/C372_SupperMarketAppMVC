<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/style.css">
  <title>Supermarket App</title>

  <script>
    // Validate quantity input doesn't exceed stock level
    function validateQuantity(productId, maxStock) {
      const input = document.getElementById('qty-' + productId);
      const quantity = parseInt(input.value, 10);

      if (isNaN(quantity) || quantity < 1) {
        alert('Please enter a valid quantity (minimum 1)');
        input.focus();
        return false;
      }

      if (quantity > maxStock) {
        alert(`You can only purchase up to ${maxStock} units of this product`);
        input.value = maxStock;
        input.focus();
        return false;
      }

      return true;
    }
  </script>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/cart">View Cart</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/feedback">Leave Feedback</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main content -->
  <div class="container py-4">
    <p class="text-muted mb-2">
      Welcome, <strong><%= user.username %></strong> (<%= user.role %>)
    </p>

    <div class="text-center mb-4">
      <h2 class="mb-1">Products from Supermarket</h2>
      <p class="text-muted mb-0">Search, filter and add items to your cart.</p>
    </div>

    <!-- Search and Filter Panel -->
    <div class="card mb-4 p-4 bg-light shadow-sm">
      <h5 class="mb-3">Search & Filter</h5>
      <form method="GET" action="/shopping" class="row g-3">

        <!-- Search by Product Name -->
        <div class="col-md-3">
          <label for="search" class="form-label">Search Product</label>
          <input
            type="text"
            class="form-control"
            id="search"
            name="search"
            list="recent-searches"
            placeholder="Product name..."
            value="<%= searchQuery %>">

          <!-- Datalist for recent searches (session-backed) -->
          <datalist id="recent-searches">
            <% (recentSearches || []).forEach(function(q) { %>
              <option value="<%= q %>"></option>
            <% }); %>
          </datalist>

          <!-- Quick recent searches as tags -->
          <% if (recentSearches && recentSearches.length) { %>
            <div class="mt-2 small">
              Recent searches:
              <% recentSearches.forEach(function(q, idx) { %>
                <a href="/shopping?search=<%= encodeURIComponent(q) %>" class="badge bg-light text-decoration-none me-1"> <%= q %> </a>
              <% }); %>
            </div>
          <% } %>
        </div>

        <!-- Filter by Category -->
        <div class="col-md-3">
          <label for="category" class="form-label">Category</label>
          <select class="form-select" id="category" name="category">
            <option value="">All Categories</option>
            <% (categories || []).forEach(function (cat) { %>
              <option value="<%= cat %>" <% if (categoryFilter === cat) { %>selected<% } %>>
                <%= cat %>
              </option>
            <% }); %>
          </select>
        </div>

        <!-- Sort by Price -->
        <div class="col-md-3">
          <label for="priceSort" class="form-label">Price</label>
          <select class="form-select" id="priceSort" name="priceSort">
            <option value="">Default</option>
            <option value="asc"  <% if (priceSort === 'asc')  { %>selected<% } %>>Lowest to Highest</option>
            <option value="desc" <% if (priceSort === 'desc') { %>selected<% } %>>Highest to Lowest</option>
          </select>
        </div>

        <!-- Sort by Rating -->
        <div class="col-md-3">
          <label for="ratingSort" class="form-label">Rating</label>
          <select class="form-select" id="ratingSort" name="ratingSort">
            <option value="">Default</option>
            <option value="highest"  <% if (ratingSort === 'highest')  { %>selected<% } %>>Highest Rating First</option>
            <option value="lowest"   <% if (ratingSort === 'lowest')   { %>selected<% } %>>Lowest Rating First</option>
            <option value="no-rating"<% if (ratingSort === 'no-rating'){ %>selected<% } %>>No Rating First</option>
          </select>
        </div>

        <div class="col-12">
          <button type="submit" class="btn btn-primary me-2">Apply Filters</button>
          <a href="/shopping" class="btn btn-outline-secondary">Clear Filters</a>
        </div>
      </form>
    </div>

    <% 
      // Group products by category
      const groupedByCategory = {};
      (products || []).forEach(function (product) {
        const category = product.category || 'Uncategorized';
        if (!groupedByCategory[category]) {
          groupedByCategory[category] = [];
        }
        groupedByCategory[category].push(product);
      });

      const displayCategories = Object.keys(groupedByCategory).sort();
    %>

    <% if (!products || products.length === 0) { %>
      <div class="alert alert-info text-center">
        No products found matching your search or filters.
      </div>
    <% } else { %>

      <% displayCategories.forEach(function (category) { %>
        <section class="mb-5">
          <h3 class="mb-3">
            <span class="badge bg-primary fs-6"><%= category %></span>
          </h3>

          <div class="row g-4">
            <% groupedByCategory[category].forEach(function (product) { %>

              <% 
                // Safely normalise numeric fields
                const priceNum = Number(product.price || 0);
                const hasRating = product.avgRating !== null && product.avgRating !== undefined;
                const ratingNum = hasRating ? Number(product.avgRating) : 0;

                let badgeColor = 'bg-secondary';
                if (hasRating) {
                  if (ratingNum > 3.0)      badgeColor = 'bg-success';
                  else if (ratingNum > 1.0) badgeColor = 'bg-warning';
                  else                      badgeColor = 'bg-danger';
                }
              %>

              <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm product-card">

                  <!-- Image -->
                  <div class="ratio ratio-4x3">
                    <a href="/product/<%= product.id %>">
                      <img
                        src="/images/<%= product.image %>"
                        class="card-img-top object-fit-cover"
                        alt="<%= product.productName %>">
                    </a>
                  </div>

                  <!-- Body -->
                  <div class="card-body d-flex flex-column">
                    <h5 class="card-title mb-1 d-flex align-items-center">
                      <a href="/product/<%= product.id %>" class="text-decoration-none text-dark me-2">
                        <%= product.productName %>
                      </a>
                      <% if (hasRating) { %>
                        <span class="badge <%= badgeColor %> small">
                          <%= ratingNum.toFixed(1) %>/5
                        </span>
                      <% } else { %>
                        <span class="badge bg-secondary small">No Rating</span>
                      <% } %>
                    </h5>

                    <p class="card-text mb-1 text-muted small">
                      Stock: <strong><%= product.quantity %></strong>
                    </p>

                    <p class="card-text mb-2">
                      <span class="fw-semibold text-success">
                        $<%= priceNum.toFixed(2) %>
                      </span>
                    </p>

                    <!-- Rating summary block -->
                    <div class="mb-3">
                      <% if (hasRating) { %>
                        <span class="badge <%= badgeColor %>">
                          <%= ratingNum.toFixed(1) %>/5
                        </span>
                        <small class="d-block text-muted">
                          (<%= product.ratingCount %> reviews)
                        </small>
                      <% } else { %>
                        <span class="badge bg-secondary">No Rating</span>
                      <% } %>
                    </div>

                    <!-- Add to cart / Out of stock -->
                    <div class="mt-auto">
                      <% if (product.quantity > 0) { %>
                        <% if (user && String(user.role).toLowerCase() === 'admin') { %>
                          <div class="alert alert-secondary small mb-2">
                            Admins cannot purchase products. Manage stock in the <a href="/inventory">Inventory</a>.
                          </div>
                        <% } else { %>
                          <form
                            action="/add-to-cart/<%= product.id %>"
                            method="POST"
                            class="d-flex flex-column gap-2"
                            onsubmit="return validateQuantity(<%= product.id %>, <%= product.quantity %>)">

                            <div>
                              <label class="form-label mb-1 small">
                                Quantity (Max: <%= product.quantity %>)
                              </label>
                              <input
                                type="number"
                                class="form-control form-control-sm"
                                name="quantity"
                                id="qty-<%= product.id %>"
                                value="1"
                                min="1"
                                max="<%= product.quantity %>"
                                required
                                placeholder="Enter quantity">
                              <small class="text-muted d-block mt-1">
                                Available: <%= product.quantity %> units
                              </small>
                            </div>

                            <button type="submit" class="btn btn-primary btn-sm w-100">
                              Add to Cart
                            </button>
                          </form>
                        <% } %>
                      <% } else { %>
                        <span class="badge bg-danger d-block mb-2">Out of Stock</span>
                        <button type="button" class="btn btn-secondary btn-sm w-100" disabled>
                          Not Available
                        </button>
                      <% } %>
                    </div>
                  </div>
                </div>
              </div>

            <% }); %>
          </div>
        </section>
      <% }); %>
    <% } %>
  </div>
  <%- include('partials/footer') %>
</body>
</html>
