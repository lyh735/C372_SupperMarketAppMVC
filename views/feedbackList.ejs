<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/style.css">
  <title>Supermarket App - Leave Feedback</title>
</head>
<body>

  <!-- â­ REPLACED NAVBAR (your original navbar) -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/shopping">Back to Shopping</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <!-- END NAVBAR -->

  <!-- Main content -->
  <div class="container py-4">
    <% if (user) { %>
      <p class="text-muted mb-3">
        Signed in as: <strong><%= user.username %></strong> (<%= user.role %>)
      </p>
    <% } %>

    <div class="text-center mb-4">
      <h2 class="mb-1">Product Feedback</h2>
      <p class="text-muted mb-0">Pick a product to view reviews or leave your own feedback.</p>
    </div>

    <% if (!products || products.length === 0) { %>
      <div class="alert alert-info text-center">
        No products available at this time.
      </div>
      <div class="text-center mt-3">
        <a href="/shopping" class="btn btn-secondary">Back to Shopping</a>
      </div>

    <% } else { %>

      <!-- Product cards grid -->
      <div class="row g-4">
        <% products.forEach(product => { %>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card h-100 shadow-sm product-card">
              <div class="ratio ratio-4x3">
                <img 
                  src="/images/<%= product.image %>" 
                  class="card-img-top object-fit-cover" 
                  alt="<%= product.productName %>">
              </div>

              <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-1"><%= product.productName %></h5>

                <p class="card-text text-muted mb-2">
                  $<%= product.price.toFixed(2) %>
                </p>

                <p class="card-text text-muted small mb-3">
                  In stock: <strong><%= product.quantity %></strong>
                </p>

                <div class="mt-auto d-grid">
                  <a href="/feedback/product/<%= product.id %>" class="btn btn-primary btn-sm">
                    View Feedback / Review
                  </a>
                </div>

              </div>
            </div>
          </div>
        <% }); %>
      </div>

      <div class="text-center mt-4">
        <a href="/shopping" class="btn btn-outline-secondary">Back to Shopping</a>
      </div>

    <% } %>
  </div>
</body>
</html>
